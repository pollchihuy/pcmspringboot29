<!--        </File>-->
        <!--                     filePattern="logs/app-%d{yyyy-MM-dd_HH_mm}.log.gz">-->
        <RollingFile name="DailyRollingFileAppender"
                     fileName="logs/app.log"
                     filePattern="logs/app-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="1"/> <!-- Retain logs for 7 days -->
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="com.juaracoding.pcmspringboot29" level="info" additivity="false">
<!--            <AppenderRef ref="Console"/>-->
<!--            <AppenderRef ref="FileLogger"/>-->
            <AppenderRef ref="DailyRollingFileAppender"/>
        </Logger>
        <Root level="info">
<!--            <AppenderRef ref="Console"/>-->
            <AppenderRef ref="DailyRollingFileAppender"/>
        </Root>
    </Loggers>
</Configuration>